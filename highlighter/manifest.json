{
	"manifest_version": 2,
	"name": "Highlighter",
	"short_name": "Highlighter",
	"description": "Highlights given keywords on any web page you visit.",
	"version": "1.0.0",
	"icons": {
		"16": "icons/icon16.png",
		"24": "icons/icon24.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"64": "icons/icon64.png",
		"72": "icons/icon72.png",
		"96": "icons/icon96.png",
		"128": "icons/icon128.png",
		"256": "icons/icon256.png"
	},
	"permissions": ["tabs", "http://localhost:8080/"],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"]
		}
	],
	"browser_action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"24": "icons/icon24.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"64": "icons/icon64.png",
			"72": "icons/icon72.png",
			"96": "icons/icon96.png",
			"128": "icons/icon128.png",
			"256": "icons/icon256.png"
		},
		"default_title": "Highlighter"
	}
}
